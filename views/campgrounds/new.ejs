<%- include("../partials/header") %>

<div class="row">
  
  <div class="col-6 offset-3">
    <h1 class="text-center">New Campground</h1>
    <form
      action="/campgrounds"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Camp Name</label>
        <input
          class="form-control"
          type="text"
          placeholder="Camp Name"
          id="title"
          name="title"
          required
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Camp Location</label>
        <input
          class="form-control"
          type="text"
          placeholder="Camp Location"
          id="location"
          name="location"
          required
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          placeholder="Image URL"
          id="image"
          name="image"
          required
        />
      </div>

      <div class="mt-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            step="0.01"
            min="0.00"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="price"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          placeholder="Description"
          id="description"
          name="description"
          required
        ></textarea>
      </div>

      <div class="mb-3 text-center">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
  </div>
</div>



<%- include("../partials/footer") %>
