<%- include("../partials/header") %>




<div class="row">
    <h1 class="text-center">Edit <%= campground.title %></h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campground._id %>?_method=put" method="post" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title">Camp Name</label>
                <input class="form-control" type="text" placeholder="Camp Name" id="title" name="title" value="<%= campground.title %>" required>
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="location">Camp Location</label>
                <input class="form-control" type="text" placeholder="Camp Location" id="location" name="location" value="<%= campground.location %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" placeholder="Image URL" id="image" name="image" value="<%= campground.image %>" required>
            </div>

            <div class="mt-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="number" step="0.01" min="0.00" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="price" value="<%= campground.price %>" required>
                  </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" placeholder="Description" id="description" name="description" required><%= campground.description %> </textarea>
            </div>

            <div class="text-center">
                <button class="btn btn-warning mx-3">Edit Campground</button>
                <a class="btn btn-primary mx-3" href="/campgrounds/<%= campground._id %>/show">Campground Details</a>
            </div>
            
        </form>

        
    </div>
</div>





<%- include("../partials/footer") %>